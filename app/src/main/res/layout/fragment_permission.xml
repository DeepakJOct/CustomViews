<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PermissionFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Permissions"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is to demonstrate how to ask permissions in an android application"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_ask_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ask Permissions"
            android:backgroundTint="@color/amazon_orange"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</RelativeLayout>